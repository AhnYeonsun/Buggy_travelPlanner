<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@drawable/intro"
        tools:context="com.example.ahn.signinwithgoogle.AddPlan">


    <EditText
        android:id="@+id/plan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#62ffffff"
        android:drawableLeft="@drawable/test"
        android:hint="   Write your new Travel name"
        android:padding="5dp"
        android:textColorHint="#000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="38dp" />


    <TextView
        android:id="@+id/start_date"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plan_name"
        android:layout_centerVertical="true"
        android:background="#2bffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/test"
        android:padding="5dp"
        android:text="   Start Date"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="184dp"
        android:layout_height="43dp"
        android:layout_alignBaseline="@+id/start_date"
        android:layout_alignBottom="@+id/start_date"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/start_date"
        android:background="#62ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/test"
        android:padding="5dp"
        android:text="   End Date"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="90dp" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="Create New Plan!"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="148dp" />


    <ListView
        android:id="@+id/planListview"
        android:layout_width="369dp"
        android:layout_height="332dp"
        android:layout_margin="8dp"
        android:layout_weight="2"
        android:choiceMode="multipleChoice"
        android:divider="#FFCCCC"
        android:dividerHeight="2dp"
        android:listSelector="#add599ff"
        android:longClickable="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="227dp"
        android:background="@drawable/border"></ListView>

</android.support.constraint.ConstraintLayout>
