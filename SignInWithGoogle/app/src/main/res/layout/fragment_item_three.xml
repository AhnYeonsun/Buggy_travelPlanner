<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/loginpage"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ItemThreeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="4"
        android:background="#c6ffffff">

        <ImageView
            android:layout_width="109dp"
            android:layout_height="102dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="25dp"
            android:fontFamily="@font/enjoy"
            android:padding="5dp"
            android:text="V 1.0.0"
            android:textColor="#d4000000"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/addplan_border"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


            <ListView
                android:id="@+id/infoListview"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginBottom="16dp"
                android:choiceMode="multipleChoice"
                android:divider="#f6d289"
                android:dividerHeight="4dp"
                android:listSelector="#d2eda764"
                android:longClickable="true">

            </ListView>

    </LinearLayout>
</LinearLayout>
