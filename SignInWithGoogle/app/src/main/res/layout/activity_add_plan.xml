<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9d66f6"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:weightSum="6"
    tools:context="com.example.ahn.signinwithgoogle.AddPlan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1.7"
        android:background="#ffffff">

        <EditText
            android:id="@+id/plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a1ffffff"
            android:drawableLeft="@drawable/resize_plan"
            android:gravity="center_horizontal"
            android:hint="여행이름을 적어주세요"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/start_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/plan_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:background="#a1ffffff"
            android:clickable="true"
            android:drawableLeft="@drawable/test"
            android:gravity="center_horizontal"
            android:hint="시작날"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/start_date"
            android:layout_alignBottom="@+id/start_date"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/start_date"
            android:background="#a1ffffff"
            android:clickable="true"
            android:drawableLeft="@drawable/test"
            android:gravity="center_horizontal"
            android:hint="마지막날"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/end_date"
            android:layout_marginTop="8dp"
            android:background="#a1ffffff"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="여행 만들기"
            android:textSize="40sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="4"
        android:background="@drawable/addplan_border">

        <ListView
            android:id="@+id/planListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:choiceMode="multipleChoice"
            android:divider="#f6d289"
            android:dividerHeight="2dp"
            android:listSelector="#d2eda764"
            android:longClickable="true">

        </ListView>
    </LinearLayout>


</LinearLayout>