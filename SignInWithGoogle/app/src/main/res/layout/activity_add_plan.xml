<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/intro"
    tools:context="com.example.ahn.signinwithgoogle.AddPlan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#62ffffff"
            android:drawableLeft="@drawable/resize_plan"
            android:hint="   Write your new Travel name"
            android:padding="5dp"
            android:textColorHint="#000000" />


        <TextView
            android:id="@+id/start_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/plan_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:background="#2bffffff"
            android:clickable="true"
            android:drawableLeft="@drawable/test"
            android:padding="5dp"
            android:text="   Start Date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/start_date"
            android:layout_alignBottom="@+id/start_date"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/start_date"
            android:background="#62ffffff"
            android:clickable="true"
            android:drawableLeft="@drawable/test"
            android:padding="5dp"
            android:text="   End Date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/end_date"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:text="Create New Plan!"
            android:background="#62ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="3.5"
        android:background="@drawable/addplan_border">

        <ListView
            android:id="@+id/planListview"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginBottom="16dp"
            android:choiceMode="multipleChoice"
            android:divider="#f6d289"
            android:dividerHeight="2dp"
            android:listSelector="#d2eda764"
            android:longClickable="true">

        </ListView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginEnd="21dp"
            android:src="@drawable/boat" />
    </RelativeLayout>

</LinearLayout>