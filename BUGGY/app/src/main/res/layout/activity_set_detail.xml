<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.white.sneakers.buggy.SetDetail">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1440"
        android:background="@drawable/loginpage"
        app:scale_base_height="2560">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#1a4a83"
            android:padding="10dp"
            android:text="Create New Plan"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#dec03b"
            app:scale_textsize="100"
            app:scale_height="250"
            app:scale_left="50"
            app:scale_top="250"
            app:scale_width="1345"
            android:textStyle="bold"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a5ffffff"
            app:scale_height="1550"
            app:scale_left="50"
            app:scale_top="700"
            app:scale_width="1345" />

        <TextView
            android:id="@+id/locatontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiting Place"
            app:scale_textsize="100"
            app:scale_height="300"
            app:scale_left="490"
            app:scale_top="800"
            app:scale_width="800" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spot"
            app:scale_height="300"
            app:scale_left="250"
            app:scale_top="750"
            app:scale_width="200" />
        <EditText
            android:id="@+id/spot"
            android:scrollHorizontally="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#70aeaeae"
            android:gravity="center_horizontal"
            android:hint="Write your visiting place"
            android:inputType="textPersonName"
            android:padding="5dp"
            app:scale_textsize="80"
            app:scale_height="300"
            app:scale_left="220"
            app:scale_top="1020"
            app:scale_width="1000"/>

        <TextView
            android:id="@+id/memotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memo"
            app:scale_textsize="100"
            app:scale_height="300"
            app:scale_left="530"
            app:scale_top="1400"
            app:scale_width="800"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/memo"
            app:scale_height="300"
            app:scale_left="250"
            app:scale_top="1350"
            app:scale_width="200" />


        <EditText
            android:id="@+id/memo"
            android:scrollHorizontally="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#70aeaeae"
            android:gravity="center_horizontal"
            android:hint="Write down simple memo"
            android:inputType="textPersonName"
            android:padding="5dp"
            app:scale_textsize="80"
            app:scale_height="300"
            app:scale_left="220"
            app:scale_top="1650"
            app:scale_width="1000"/>

        <Button
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/saveBtn"
            android:layout_marginStart="19dp"
            android:background="#1a4a83"
            android:text="Location"
            android:textColor="#ffffff"
            app:scale_textsize="60"
            app:scale_height="180"
            app:scale_left="220"
            app:scale_top="2000"
            app:scale_width="400"
            />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1a4a83"
            android:text="SAVE"
            android:textColor="#ffffff"
            app:scale_textsize="60"
            app:scale_height="180"
            app:scale_left="810"
            app:scale_top="2000"
            app:scale_width="400"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>


</LinearLayout>